<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table id="users">
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th colspan="3"></th>
  </tr>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>